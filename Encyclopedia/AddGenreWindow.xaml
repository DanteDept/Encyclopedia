<Window x:Class="FairyTaleEncyclopedia.AddGenreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить жанр" Height="200" Width="400">
    <Grid>
        <TextBlock Text="Название жанра:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,19,0,0"/>
        <TextBox x:Name="GenreNameBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,20,0,0" Height="20"/>
        <TextBlock Text="Описание:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0"/>
        <TextBox x:Name="DescriptionBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,60,0,0" Height="50"/>

        <Button Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="80,0,0,20" Click="SaveButton_Click" Background="#2A9D8F" Foreground="White" FontWeight="Bold" 
BorderBrush="#264653"/>
        <Button Content="Отмена" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="200,0,0,20" Click="CancelButton_Click" Background="#E76F51" Foreground="White" FontWeight="Bold" 
BorderBrush="#264653"/>
    </Grid>
</Window>
