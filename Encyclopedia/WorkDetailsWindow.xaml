<Window x:Class="FairyTaleEncyclopedia.WorkDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали произведения" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Название:" FontWeight="Bold" />
        <TextBlock x:Name="TitleTextBlock" Margin="0,0,0,10"/>

        <TextBlock Text="Жанр:" FontWeight="Bold" />
        <TextBlock x:Name="GenreTextBlock" Margin="0,0,0,10"/>

        <TextBlock Text="Год публикации:" FontWeight="Bold" />
        <TextBlock x:Name="YearTextBlock" Margin="0,0,0,10"/>

        <TextBlock Text="Описание:" FontWeight="Bold" />
        <TextBlock x:Name="DescriptionTextBlock" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
