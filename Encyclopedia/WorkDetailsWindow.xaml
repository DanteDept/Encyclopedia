<Window x:Class="FairyTaleEncyclopedia.WorkDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали произведения" MinHeight="400" MinWidth="450"  MaxHeight="400" MaxWidth="450"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#FAF9F6" FontFamily="Segoe UI" FontSize="14" Icon="/icon.png">

    <Border Margin="10" Padding="10" BorderBrush="#264653" BorderThickness="2" CornerRadius="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <TextBlock Text="Название:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="TitleTextBlock" Margin="0,0,0,10" TextWrapping="Wrap" FontSize="16"/>

                <TextBlock Text="Жанр:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="GenreTextBlock" Margin="0,0,0,10" TextWrapping="Wrap"/>

                <TextBlock Text="Год публикации:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="YearTextBlock" Margin="0,0,0,10"/>

                <TextBlock Text="Описание:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="DescriptionTextBlock" TextWrapping="Wrap" Margin="0,0,0,10" FontSize="14"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
